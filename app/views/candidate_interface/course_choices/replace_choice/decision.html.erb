<% content_for :title, t('page_titles.replace_course_choice_show') %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_application_complete_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @replacement_decision_form, url: candidate_interface_decision_path(id: @course_choice.id), method: :post do |f| %>

    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl"> <%= "#{@provider_name} - #{@course_name_and_code}" %></span>
      <%= t('page_titles.replace_course_choice_show') %>
    </h1>

    <p class='govuk-body'><%= @course_name_and_code %> is <%= @full_or_withdrawn %>s.</p>

    <p class='govuk-body'>Update your course choice now: when your references come in we’ll send your application to your <%= @pluralize_provider %></p>

    <%= f.govuk_radio_buttons_fieldset :replacement_decision, legend: { text: 'What do you want to do?' } do %>
        <%= f.govuk_radio_button :decision, 'different_course', label: { text: 'Choose a different course' } %>
        <%= f.govuk_radio_button :decision, 'remove_course', label: { text: 'Remove course from application' } %>
        <%= f.govuk_radio_button :decision, 'keep_choice', label: { text: 'Keep this course choiceKeep this course choice' }, hint_text: "#{@provider_name} will get your application but there’s no guarantee they’ll consider it." %>
    <% end %>

    <%= f.govuk_submit 'Continue' %>
  <% end %>
  </div>
</div>
