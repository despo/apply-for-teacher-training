<% content_for :title, title_with_error_prefix(t('page_titles.have_you_chosen'), @choice_form.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_replace_course_choice_path(@course_choice.id)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @choice_form, url: candidate_interface_replace_course_choices_choose_path do |f| %>

      <%= render partial: 'candidate_interface/course_choices/shared/ask_fields', locals: { f: f }  %>

      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
