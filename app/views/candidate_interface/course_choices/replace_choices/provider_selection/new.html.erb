<% content_for :title, title_with_error_prefix(t('page_titles.which_provider'), @pick_provider.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_replace_course_choices_choose_path(@course_choice.id)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
          model: @pick_provider,
          url: candidate_interface_replace_course_choice_provider_path,
          id: 'pick-provider-form',
        ) do |f| %>

        <%= render partial: 'candidate_interface/course_choices/shared/provider_fields', locals: { f: f }  %>

      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
