<% content_for :title, title_with_error_prefix(t('page_titles.references_type'), @reference_type_form.errors.any?) %>
<% content_for :before_content, govuk_back_link_to %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @reference_type_form,
      url: candidate_interface_references_type_path,
      method: :post,
    ) do |f| %>
      <%= render 'shared_form', f: f %>
    <% end %>
  </div>
</div>

<%= render(
    CandidateInterface::ApplicationFeedbackComponent.new(
      section: 'references',
      path: 'candidate_interface_references_type_path',
      page_title: t('page_titles.references_type')
    )
  )
%>
