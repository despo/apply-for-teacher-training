<% content_for :title, title_with_error_prefix(t('page_titles.degree_naric_statement'), @degree_naric_statement_form.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_degree_year_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @degree_naric_statement_form,
      url: candidate_interface_degree_naric_statement_path(@degree_naric_statement_form.degree)
    ) do |f| %>
      <h1 class="govuk-heading-xl">
        <%= t('page_titles.degree_naric_statement') %>
      </h1>

      <%= render 'form_fields', f: f %>
    <% end %>
  </div>
</div>
