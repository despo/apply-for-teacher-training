<% providers_that_can_make_decisions = providers_that_can('make_decisions') %>
<% if providers_that_can_make_decisions.any? %>
  <p class="govuk-!-margin-bottom-1 govuk-body">The following organisation(s) can make decisions:</p>
  <ul class="govuk-list make-decisions">
    <% providers_that_can_make_decisions.each do |provider| %>
      <li><%= render CheckIcon.new %> <%= provider.name %> </li>
    <% end %>
  </ul>
<% end %>

