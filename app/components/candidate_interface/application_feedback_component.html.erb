<% if FeatureFlag.active?(:feedback_prompts) %>
  <div class="govuk-width-container govuk-!-margin-top-6">
    <div class="app-feedback__container">
      <h2 class="app-feedback__container-title">
        Are there any issues with this section?
      </h2>

      <ul class="app-feedback__list">
        <li class="app-feedback__list-item">
          <%= govuk_link_to 'Yes',
                candidate_interface_application_feedback_path(issues: true, section: section, path: path, page_title: page_title),
                class: 'govuk-button app-feedback__button',
                method: :post %>
          <%= govuk_link_to 'No',
                candidate_interface_application_feedback_path(issues: false, section: section, path: path, page_title: page_title),
                class: 'govuk-button app-feedback__button govuk-!-margin-left-1',
                method: :post %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
